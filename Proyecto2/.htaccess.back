<IfModule mod_rewrite.c>
 # Activar rewrite
 RewriteEngine On
 ErrorDocument 404 http://localhost:3000/Proyecto2/error/

RewriteCond %{SCRIPT_FILENAME} !-d
RewriteCond %{SCRIPT_FILENAME} !-f

RewriteRule ^([a-zA-Z]*)/([a-zA-Z]*)$ index.php?controller=$1&action=$2
</IfModule>
